.side-bar 
  .header    
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        .li.list
          = link_to new_group_path do
            =icon('far fa-edit', class: 'icon')
        .li.list
          = link_to edit_user_path(current_user) do
            =icon('fas fa-cog', class: 'icon')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
            = group.show_last_message